<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<metal:block use-macro="here/cpsskins_edit_macro/macros/edit" i18n:domain="cpsskins">
  <metal:block fill-slot="edit"
  tal:define="tmtool here/portal_themes; 
              view_mode tmtool/getViewMode;
              theme view_mode/theme|request/form/theme|nothing;
              edit_mode view_mode|edit_mode|nothing;">
    <metal:block use-macro="here/cpsskins_form_widgets/macros/imagenavigation" />

    <h1 tal:define="title string:_Add an image_"
     tal:content="python: mcat and mcat(title) or title" i18n:translate="" />
    <form action="cpsskins_image_add" method="post"
    enctype="multipart/form-data">
      <input type="hidden" name="theme"
      tal:attributes="value theme" />
      <input type="hidden" name="edit_mode"
      tal:attributes="value edit_mode" />
      <table cellspacing="0" cellpadding="2" border="0">
        <tr>
          <td>
            <input type="file" name="file" size="25" value="" />
          </td>
        </tr>
        <tr>
          <td align="left" valign="top">
            <input type="submit" class="mainbutton"
            i18n:attributes="value" i18n:domain="cpsskins"
            tal:define="title string:_button_upload_image_"
            tal:attributes="value python: mcat and mcat(title) or title" />
          </td>
        </tr>
      </table>
    </form>
  </metal:block>
</metal:block>
