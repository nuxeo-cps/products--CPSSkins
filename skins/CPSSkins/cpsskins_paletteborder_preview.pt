<tal:block define="
  inline options/inline|nothing;
  value here/value|nothing">
  <div tal:condition="not:inline"
   tal:attributes="style string:border-style:$value;; border-width: 2px;; width: 80px;; height: 80px;;">&nbsp;</div>
  <div tal:condition="inline"
   tal:attributes="style string:border-style:$value;; border-width: 1px;; width: 16px;; height: 16px;;">&nbsp;</div>
</tal:block>
