/* select panel */
function selection_restart(select_id) {
    document.data[select_id].selectedIndex = style;
    mywindow.close();
}

function textfield_restart(textfield_id) {
    document.data[textfield_id].value = value;
    mywindow.close();
}

function selectImage(value, select_id) {
    opener.style = value;
