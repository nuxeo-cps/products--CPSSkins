function OnMouseOver(srcEle, title, color) {
  TempColor = srcEle.style.backgroundColor;
  srcEle.style.backgroundColor = color;
  srcEle.title = title;
}

function OnMouseOut(srcEle) {
  srcEle.style.backgroundColor = TempColor;
}

function redirect(url) {
  window.location=url;
}

/* Select panel */
function select(panel, field) {
  current_field = field;
  toggle(panel);
}

function toggle(panelId) {
  if (document.getElementById) {
    var target = document.getElementById(panelId);
    if (target.style.display != "block"){
      target.style.display = "block";
    } else {
      target.style.display = "none";
    }
  }
}

function selection_restart(select_id) {
  document.data[select_id].selectedIndex = style;
}

function textfield_restart(textfield_id) {
  document.data[textfield_id].value = value;
}

function selectImage(value) {
  opener.style = value;
  opener.selection_restart(current_field);
}

function selectPalette(value) {
  opener.value = value;
  opener.textfield_restart(current_field);
}

function selectTheme(value) {
  opener.style = value;
  opener.selection_restart(current_field);
}

function selectSlot(value) {
  opener.value = value;
  opener.textfield_restart(current_field);
}

function selectStyle(style) {
  opener.style = style;
  opener.selection_restart(current_field);
}

/* Pop-up window */
function newWindow(url) {
