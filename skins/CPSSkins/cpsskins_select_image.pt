<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html tal:define="base_url python: request.get('cpsskins_base_url', '')">
  <head>
    <link rel="Stylesheet" type="text/css"
    tal:attributes="href string:${base_url}cpsskins_theme_edit.css" />
    <script type="text/javascript" 
    tal:attributes="src string:${base_url}cpsskins_theme_edit.js" />
  </head>
  <body tal:define="imagecat request/form/image|nothing;
                    prop request/form/prop|nothing;
                    images python: here.cpsskins_listImages(imagecat=imagecat)">
    <div class="panel" tal:repeat="image images">
      <a tal:define="number repeat/image/number"
       tal:attributes="href string:javascript:selectImage('$number', '$prop')">
        <div style="width: 250px">
          <h1 tal:content="image/title" />
          <tal:block content="string:${image/size} bytes" />
          <tal:block content="string:(${image/width}x${image/height} px)" />
          <img border="0" tal:condition="python: imagecat == 'icons'"
           tal:attributes="width python: '%spx' % test(image.width &gt; 200, 200, image.width); src image/absolute_url" />
          <img border="0" tal:condition="python: imagecat == 'thumbnails'"
           tal:attributes="src image/absolute_url" />
          <div class="backgroundeditbox"
           tal:condition="python: imagecat == 'backgrounds'"
           tal:attributes="style string:background: url('${image/absolute_url}');;">
          </div>
        </div>
      </a>
    </div>
  </body>
</html>
