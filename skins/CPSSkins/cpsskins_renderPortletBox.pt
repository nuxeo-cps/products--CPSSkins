<div tal:attributes="class options/boxclass|nothing">
  <div tal:define="portlet nocall:options/portlet;
                   rendered options/rendered;
                   boxedit options/boxedit|nothing;
                   macro_path options/macro_path|nothing;"
       tal:attributes="style options/boxstyle|nothing"
       tal:condition="macro_path">
    <metal:block use-macro="macro_path">
      <metal:block fill-slot="box_title" >
        <tal:block content="structure portlet/getTitle" />
      </metal:block>
      <metal:block fill-slot="box_body" >
        <tal:block content="structure rendered" />
      </metal:block>
    </metal:block>
  </div>
</div>
