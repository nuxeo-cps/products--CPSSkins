<tal:block define="
  inline options/inline|nothing;
  value here/value|nothing">
  <div tal:condition="not:inline"
   tal:attributes="style string:background-color:$value;; width: 80px;; height: 80px;;">&nbsp;</div>
  <div tal:condition="inline"
   tal:attributes="style string:background-color:$value;; width: 16px;; height: 16px;; border: 1px solid Black">&nbsp;</div>
</tal:block>
