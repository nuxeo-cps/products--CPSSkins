<tal:block
 define="enable_esi options/enable_esi|nothing;
         context_obj nocall:options/context_obj;
         maxcols python: context['maxcols']"
 condition="maxcols">
  <tal:block define="objects python: context.getObjects(REQUEST=request)"
             repeat="x_pos python: range(int(maxcols))">
    <tal:block 
     define="objects_in_xpos python: objects.get(x_pos, None)">
      <tal:block
       define="contents_in_xpos python: objects_in_xpos['contents']">
        <tal:block repeat="content contents_in_xpos">
          <div tal:define="rendered python: content.render_cache(shield=1, context_obj=context_obj, enable_esi=enable_esi)"
               tal:content="structure rendered" />
        </tal:block>
      </tal:block>
    </tal:block>
  </tal:block>
</tal:block>
