<table cellpadding="10" cellspacing="0" summary="" i18n:domain="cpsskins"
tal:define="mcat python: request.get('cpsskins_mcat')">
  <tr style="height: 230px">
    <td>
      <div style="text-align: left; width:130px"
      tal:attributes="class string:BoxColor${here/title}">
        <br />
        <div class="title"
        style="padding-left: 10px; padding-right: 10px; display: inline; border-style: solid; border-width: 1px;">

          <tal:block define="title string:_Menu title_"
          content="python: mcat and mcat(title) or title"
          i18n:translate="" />
        </div>
        <div class="body"
         style="border-style: solid; border-width: 1px; padding: 5px">
          <ul style="margin:0; padding:0">
            <tal:block repeat="entry python: range(1, 3)">
              <li tal:define="menuclass python: entry == 2 and 'selected' or ''"
                  tal:attributes="class menuclass">
                <a href="" style="display: block; border-width: 1px; border-style: solid"
                tal:define="title string:_Menu entry_"
                tal:content="python: mcat and mcat(title) or title"
                i18n:translate="" /></li>
            </tal:block>
          </ul>
        </div>
      </div>
      <br />
      <div tal:attributes="class string:BoxColor${here/title}" style="width: 300px">
        <div class="title"
        style="padding-left: 10px; padding-right: 10px; display: inline; border-style: solid; border-width: 1px;">
          <tal:block define="title string:_Menu title_"
          content="python: mcat and mcat(title) or title"
          i18n:translate="" />
        </div>
        <div class="body"
         style="border-style: solid; border-width: 1px; padding: 5px">
          <ul style="margin:0; padding:0">
            <tal:block repeat="entry python: range(1, 3)">
              <li tal:define="menuclass python: entry == 2 and 'selected' or None"
                  tal:attributes="class menuclass"
                  style="margin: 2px">
                <a href="" style="border-style: solid; border-width: 1px; display: inline"
                tal:define="title string:_Menu entry_"
                tal:content="python: mcat and mcat(title) or title"
                i18n:translate="" /></li>
            </tal:block>
          </ul>
        </div>
      </div>
    </td>
  </tr>
</table>
