<table cellpadding="10" cellspacing="0" i18n:domain="cpsskins"
tal:define="mcat python: request.get('cpsskins_mcat')">
  <tr style="height: 230px">
    <td>
      <div style="text-align: left; width:130px"
      tal:attributes="class string:BoxColor${here/title} box">
        <br />
        <div class="title"
        style="padding-left: 10px; padding-right: 10px; display: inline; border-style: solid; border-width: 1px;">

          <tal:block define="title string:_Menu title_"
          content="python: mcat and mcat(title) or title"
          i18n:translate="" />
        </div>
        <div class="body"
        style="padding: 5px; border-style: solid; border-width: 1px;">

          <tal:block repeat="entry python: range(1, 5)">
            <div tal:define="state python: entry == 3 and 'in' or 'out'"
                 tal:attributes="class string:submenu${state}"
                 style="padding-left: 2px; margin: 3px; border-style: solid; border-width: 1px">
            <span tal:attributes="class string:menu${state}icon">
            &nbsp;</span>
            <tal:block define="title string:_Menu entry_"
            content="python: mcat and mcat(title) or title"
            i18n:translate="" />
            <tal:block content="entry" />&nbsp;</div>
          </tal:block>
        </div>
        <br />
      </div>
      <div style="text-align: left; width: 280px"
      tal:attributes="class string:BoxColor${here/title} box">
        <br />
        <div class="title"
        style="padding-left: 10px; padding-right: 10px; display: inline; border-style: solid; border-width: 1px;">

          <tal:block define="title string:_Menu title_"
          content="python: mcat and mcat(title) or title"
          i18n:translate="" />
        </div>
        <div class="body"
        style="border-style: solid; border-width: 1px; padding: 5px">

          <tal:block repeat="entry python: range(1, 3)">
            <div tal:define="state python: entry == 2 and 'in' or 'out'"
                 tal:attributes="class string:submenu$state"
                 style="padding-right: 8px; display:inline; padding-left:8px; margin: 3px; border-style: solid; border-width: 1px">
            <span tal:attributes="class string:menu${state}icon">
            &nbsp;</span>
            <tal:block define="title string:_Menu entry_"
            content="python: mcat and mcat(title) or title"
            i18n:translate="" />
            <tal:block content="entry" />&nbsp;</div>
          </tal:block>
        </div>
        <br />
      </div>
    </td>
  </tr>
</table>
